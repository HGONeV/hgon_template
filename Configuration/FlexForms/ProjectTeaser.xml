                            <label>LLL:EXT:hgon_template/Resources/Private/Language/locallang_db.xlf:flexform.projectTeaser.preHeader</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.projectTeaser.preHeader>
                    <settings.projectTeaser.header>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:hgon_template/Resources/Private/Language/locallang_db.xlf:flexform.projectTeaser.header</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>50</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.projectTeaser.header>
                    <settings.projectTeaser.text>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:hgon_template/Resources/Private/Language/locallang_db.xlf:flexform.projectTeaser.text</label>
                            <config>
                                <type>text</type>
                                <cols>24</cols>
                                <rows>3</rows>
                            </config>
                        </TCEforms>
                    </settings.projectTeaser.text>
                    <settings.projectTeaser.random>
                        <TCEforms>
                            <exclude>1</exclude>
